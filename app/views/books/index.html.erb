<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>本のタイトル</th>
      <th>感想</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.body%></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
    </tr>
  </tbody>
  <% end %>
</table>
<h2>New book</h2>
<!-- form_with-->
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label for="title">本のタイトル</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label for="body">感想</label>
  <%= f.text_area :body %>
  </div>

<div class="actions"></div>
<%= f.submit 'Create Book' %>


<% end %>