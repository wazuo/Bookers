<h1>Editing Book</h1>

<!--form_with-->
<%= form_with model:@book, local:true do |f| %>
<div class="field"><label for="title">本のタイトル</label>
<%= f.text_field :title %>
</div>

<div class="field"><label for="body">感想</label>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book'%>
</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
