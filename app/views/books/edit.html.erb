<h1>Editing Book</h1>
<% if @book.errors.any? %>
 <div id="error_explanation">
  <h2><%= @book.errors.count %>件のエラーが発生しました</h2>
  <ul>
  <% @book.errors.full_messages.each do |meassage| %>

        <li><%= meassage %></li>

  <% end %>
  </ul>
  </div>
<% end %>

<!--form_with-->
<%= form_with model:@book, local:true do |f| %>
<div class="field"><label for="title">本のタイトル</label>
<%= f.text_field :title %>
</div>

<div class="field"><label for="body">感想</label>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book'%>
</div>
<% end %>

<%= link_to "Show", book_path(@book) %>
|
<%= link_to "Back", books_path %>